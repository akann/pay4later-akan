{
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:jest/recommended",
      "prettier/react",
      "react-app",
      "plugin:prettier/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "prettier",
        "jest"
    ],
    "rules":{
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "prettier/prettier": "error",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ]
    }
}
